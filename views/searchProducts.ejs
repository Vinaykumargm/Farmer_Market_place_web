<!DOCTYPE html>
<%- include('partials/header', { title: 'Your Page Title' }) %>

<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Search Products</title>
    <link rel="stylesheet" href="/styles/style.css">
    <style>
        /* Add your styles here */
    </style>
</head>
<body>
    <header>
        <h1>Farmer Marketplace</h1>
        <nav>
            <a href="/">Home</a>
            <a href="/profile">Profile</a>
            <a href="/logout">Logout</a>
        </nav>
    </header>
    <main>
        <h2>Search Products</h2>
        <form action="/products/search" method="POST">
            <label for="name">Product Name:</label>
            <input type="text" id="name" name="name">

            <label for="category">Category:</label>
            <select id="category" name="category">
                <option value="" disabled selected>Select a category</option>
                <option value="fruits">Fruits</option>
                <option value="vegetables">Vegetables</option>
                <option value="dairy">Dairy</option>
                <option value="grains">Grains</option>
                <option value="herbs">Herbs</option>
                <option value="nuts">Nuts</option>
                <!-- Add more categories as needed -->
            </select>

            <label for="minPrice">Min Price:</label>
            <input type="number" id="minPrice" name="minPrice" step="0.01">

            <label for="maxPrice">Max Price:</label>
            <input type="number" id="maxPrice" name="maxPrice" step="0.01">

            <button type="submit">Search</button>
        </form>

        <% if (products && products.length > 0) { %>
            <h3>Search Results</h3>
            <ul>
                <% products.forEach(product => { %>
                    <li>
                        <h4><%= product.name %></h4>
                        <p><%= product.description %></p>
                        <p>Category: <%= product.category %></p>
                        <p>Price: $<%= product.price %></p>
                        <% if (product.image) { %>
                            <img src="<%= product.image %>" alt="<%= product.name %>" style="max-width: 200px;">
                        <% } %>
                    </li>
                <% }) %>
            </ul>
        <% } else { %>
            <p>No products found.</p>
        <% } %>
    </main>
</body>
</html>
